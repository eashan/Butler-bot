<Window x:Class="KinectSkeletonViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skeleton Viewer" SizeToContent="WidthAndHeight" Loaded="Window_Loaded">
    <StackPanel>
        <Canvas Name="skeletonCanvas" Height="480" Width="640" HorizontalAlignment="Center"/>
        <TextBlock Name="StatusTextBlock" Text="Skeleton Status" HorizontalAlignment="Center" FontSize="60"></TextBlock>
        <TextBlock Name="QualityTextBlock" Text="Quality Display" HorizontalAlignment="Center" FontSize="30"></TextBlock>
    </StackPanel>
</Window>
